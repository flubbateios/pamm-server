<!doctype html>
<html lang="en">
<head>
<%- include('head') %>
</head>
<body>
	<%- include('header') %>
	<div class="content container addmod-content">
		<h2 class="display-2">Manage Admins</h2><br />
			<form method="POST">
				<div class="form-submit-uri">
					<input type="text" class="addmod-input" autocomplete="off" name="admin" placeholder="User"/>
					<input type="hidden" name="act" value="add" />
					<input type="submit" class="btn btn-warning" style="height:32px;font-size:18px;" value="Add"/>
				</div>
			</form>
			<div class="bans">
				<% for(var x of admins){ %>
					<div class="banned-user">
						<b><%= x %></b>
						<form method="POST">
							<input type="hidden" name="admin" value="<%= x %>" />
							<input type="hidden" name="act" value="remove" />
							<input type="submit" class="btn btn-info" value="Remove"/>
						</form>
					</div>
				<% } %>
			</div>
	</div>
	<%- include('footer') %>
</body>
</html>
